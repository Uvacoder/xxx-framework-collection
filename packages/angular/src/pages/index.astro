---
import BaseLayout from '../layouts/base.astro'

const searchableWebsiteStructuredData = {
	"@context": "https://schema.org",
	"@type": "WebSite",
	"url": "https://angular.framework.dev/",
	"name": "Angular Framework.dev",
	"potentialAction": {
		"@type": "SearchAction",
		"target": {
			"@type": "EntryPoint",
			"urlTemplate": "https://angular.framework.dev/search?q={search_term_string}"
		},
		"query-input": "required name=search_term_string"
	}
}
---
<head>
	{`<script type="application/ld+json">${JSON.stringify(searchableWebsiteStructuredData)}</script>`}
</head>
<BaseLayout title="Featured Angular resources">
	<h1>Hello world</h1>
</BaseLayout>