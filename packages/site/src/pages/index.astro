---
import { formatFieldName, formatAllFrameworkTitles } from "@framework/system/src/util/string-utils.js"
import { getContributorsData } from '@framework/system/src/github-util/get-contributors.js'
import { scrollable } from '@framework/system/src/styles/layouts.css.js'
import BaseLayout from '../layouts/base.astro'
import Homepage from '../components/homepage.js'
import { getSearchData } from '../data/search-data.js'
import { FRAMEWORK_RESOURCES } from "@framework/system/src/globals/global-constants.js"

const searchData = await getSearchData(import.meta.env.VITE_FRAMEWORK)
const libraries = searchData.find(category => category.name === "libraries")
const podcasts = searchData.find(category => category.name === "podcasts")
const courses = searchData.find(category => category.name === "courses")
const blogs = searchData.find(category => category.name === "blogs")
const books = searchData.find(category => category.name === "books")
const tools = searchData.find(category => category.name === "tools")
const communities = searchData.find(category => category.name === "communities")

const contributorsData = await getContributorsData()
		
const searchableWebsiteStructuredData = {
	"@context": "https://schema.org",
	"@type": "WebSite",
	"url": `https://${import.meta.env.VITE_FRAMEWORK}.framework.dev/`,
	"name": `${formatFieldName(import.meta.env.VITE_FRAMEWORK)} Framework.dev`,
	"potentialAction": {
		"@type": "SearchAction",
		"target": {
			"@type": "EntryPoint",
			"urlTemplate": `https://${import.meta.env.VITE_FRAMEWORK}.framework.dev/search?q={search_term_string}`
		},
		"query-input": "required name=search_term_string"
	}
}

const resourceCards = FRAMEWORK_RESOURCES().filter(
	(resource) =>
		!resource.title
			.toLowerCase()
			.includes(import.meta.env.VITE_FRAMEWORK)
)
---
<head>
	<Fragment set:html={`<script type="application/ld+json">${JSON.stringify(searchableWebsiteStructuredData)}</script>`} />
</head>
<BaseLayout title={`Featured Resources | ${import.meta.env.VITE_FRAMEWORK}.framework.dev`} className={scrollable}>
	<Homepage
		librariesTitle={`Featured ${formatAllFrameworkTitles(import.meta.env.VITE_FRAMEWORK)} Libraries`}
		libraries={libraries?.data}
		libraryTags={libraries?.tags}
		podcasts={podcasts?.data}
		courses={courses?.data}
		blogs={blogs?.data}
		books={books?.data}
		tools={tools?.data}
		communities={communities?.data}
		siteName={import.meta.env.VITE_FRAMEWORK}
		resourceCards={resourceCards}
		contributorsData = {contributorsData}
	/>
</BaseLayout>
